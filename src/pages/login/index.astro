---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Login | Verano 2024">
  <main>
    <div class="flex logo:justify-center">
      <img class="logo:max-w-[350px]" src="./logo.png" alt="Verano 2024" />
    </div>
    <form action="/api/login" method="POST" class="mt-20 text-lg font-semibold w-[250px] mx-auto">
      <div class="flex flex-col mb-4">
        <label>Email: </label>
        <input
          class="focus:outline-none focus:ring-2 focus:ring-yellow-300 focus:border-transparent text-cyan-400 font-normal border py-1 px-2 rounded border-gray-300"
          type="email"
          name="email"
          required
        />
      </div>
      <div class="flex flex-col">
        <label>Contraseña: </label>
        <input
          class="focus:outline-none focus:ring-2 focus:ring-yellow-300 focus:border-transparent text-cyan-400 font-normal border py-1 px-2 rounded border-gray-300"
          type="password"
          name="password"
          required
        />
      </div>
      <div class="flex justify-center mt-8">
        <button type="submit" class="presentation bg-cyan-400 py-1.5 px-4 rounded">¡Entrar!</button>
      </div>
    </form>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
    min-height: 100vh;
  }

  .presentation {
    box-shadow: 1px 0px 10px #fff;
  }
</style>
